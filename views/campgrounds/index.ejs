<% layout("/layouts/boilerplate") %> 
<ul>
    <h1 class="mb-3">All Campgrounds</h1>
    <a class="btn btn-outline-primary mb-3" href="/campgrounds/new">New</a>
    <div class="d-flex flex-column-reverse">

    <% for (let campground of campgrounds) {%> 
        <div class="card mb-3 vh-20">
            <div class="row">
                <div class="col-md-4">
                    <img style="object-fit: cover; height: 250px;" src="<%= campground.image %>" alt="" class="image-fluid w-100 overflow-hidden">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.title %></h4>
                        <p class="card-text"><%= campground.description %></p>
                        <p class="card-text"><small class="text-muted"><%= campground.location %></small></p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">Details</a>
                    </div>
                </div>
            </div>

        </div>
    <% } %> 

    </div>
</ul>
